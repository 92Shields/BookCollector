                <Entry x:Name="publisherEntry" Text="{Binding NewBook.Title}" Placeholder="Enter publisher" />
                <Entry x:Name="editionEntry" Text="{Binding NewBook.Title}" Placeholder="Enter edition" />
                <DatePicker x:Name="publishDateEntry" Text="{Binding NewBook.Title}" />
                <Entry x:Name="pageCountEntry" Text="{Binding NewBook.Title}" Placeholder="Enter page count" />
                <Entry x:Name="locationEntry" Text="{Binding NewBook.Title}" Placeholder="Enter location" />
                <Entry x:Name="signedEntry" Text="{Binding NewBook.Title}" Placeholder="Enter signed" />
                <Entry x:Name="proofEntry" Text="{Binding NewBook.Title}" Placeholder="Enter proof" />
                <Entry x:Name="purchasePriceEntry" Text="{Binding NewBook.Title}" Placeholder="Enter purchase price" />
                <Entry x:Name="valuationEntry" Text="{Binding NewBook.Title}" Placeholder="Enter valuation" />
                <Entry x:Name="ratingEntry" Text="{Binding NewBook.Title}" Placeholder="Enter rating" />
                <Entry x:Name="conditionEntry" Text="{Binding NewBook.Title}" Placeholder="Enter condition" />-->

                <Button Text="Confirm"
                    Clicked="AddBookManually" />
                <Button Text="Cancel"
                    Clicked="CancelAddBookManually" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>