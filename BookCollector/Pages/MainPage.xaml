<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookCollector.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem
                 Order="Primary"
                 Priority="0"
                 Icon="fa-plus-circle"/>
        <ToolbarItem
            Order="Secondary"
            Text="Locations"/>
        <ToolbarItem
            Order="Secondary"
            Text="Settings"/>
    </ContentPage.ToolbarItems>

    <AbsoluteLayout Margin="20,35,20,20">
        <ListView x:Name="listView" ItemsSource="{Binding Books}">>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextCell Text="{Binding Name}"
                              Detail="{Binding Age}" />-->
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        
        <ImageButton Source="icon_add.png" 
            BackgroundColor="Transparent"
            AbsoluteLayout.LayoutFlags="PositionProportional"  
            AbsoluteLayout.LayoutBounds=".99,.99,80,80"
            Clicked="AddButton_Click">
        </ImageButton>
    </AbsoluteLayout>
</ContentPage>
